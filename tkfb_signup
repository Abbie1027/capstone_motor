##authentication to create account and store the information from sign up
auth = firebase.auth()


def pushingdata():
    emailsu = entry.get()
    passwordsu = entry2.get()
    user_su_data = {"Email": emailsu, "Password": passwordsu}
    auth.create_user_with_email_and_password(emailsu,passwordsu)
    userdata.push(user_su_data)




window = tk.Tk()

label = tk.Label(text = "Email")
label2 = tk.Label(text = "Password")
entry = tk.Entry()
entry2 = tk.Entry()
signup = tk.Button(text = "Sign up!", command = pushingdata)
#make a command in signup button to push the data

label.pack()
entry.pack()
label2.pack()
entry2.pack()
signup.pack()

